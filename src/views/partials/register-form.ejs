<form action="/auth/register" method="POST" class="space-y-4">
  <% if (error) { %>
  <div class="error-message">
    <span><%= error %></span>
  </div>
  <% } %>
  <div>
    <label for="username">Username</label>
    <input
      type="text"
      id="username"
      name="username"
      value="<%= username || '' %>"
      required
    />
  </div>
  <div>
    <label for="phone">Phone Number</label>
    <input
      type="tel"
      id="phone"
      name="phone"
      value="<%= phone || '' %>"
      required
      pattern="[0-9]{9}"
      title="Please enter a 9-digit phone number"
    />
  </div>
  <div>
    <label for="email">Email</label>
    <input
      type="email"
      id="email"
      name="email"
      value="<%= email || '' %>"
      required
    />
  </div>
  <div>
    <label for="password">Password</label>
    <input
      type="password"
      id="password"
      name="password"
      required
      minlength="6"
      title="Password must be at least 6 characters long"
    />
  </div>
  <div>
    <button type="submit">Register</button>
  </div>
</form>
